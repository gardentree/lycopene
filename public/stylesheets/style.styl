body
  background-color: #000
  min-width: 320px
  text-align: center
a
  color: #00B7FF

#clock
  margin: 0 auto;  
  width: 320px

#cover
  width: 100%
  height: 100%
  position: absolute
  top:0px
  left:0px
  z-index: 999
  background-color: #000
  color: #fff
  text-align: center
#cover div
  top: 50%
  position:relative

//state 
.working
  background-color: silver
.resting
  background-color: forestgreen
.pausing
  background-color: gold

// 
.number
  font-family: 'Inconsolata', sans-serif
  background-color: #ccc
  border: 1px solid #000
  border-radius: 8px
  box-shadow: 8px 8px 24px #333
  font-size: 72pt
  margin: 0px 8px 0px 8px
  padding:8px 8px 8px 8px
