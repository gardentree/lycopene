script(src='/javascripts/clock.js')
script(type='text/javascript')
  var controller;
  $(document).ready(function() {
    controller = build(function(state,minute,second) {
      $('#cover').attr('class',state);
      $('#minute').text(minute);
      $('#second').text(second);
    })
  });
  document.body.style.zoom=2

div#clock
  div#cover
    span#minute.number 00
    span#second.number 00

  button(onclick='controller.start();') Start
  button(onclick='controller.pause();') Pause

